{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "nodenext",
        "strict": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "strictPropertyInitialization": false,
        "noImplicitOverride": true,
        "outDir": "build",
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "build", "indexes/"]
}
